<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <View
        android:id="@+id/mark_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_half_gray" />

    <RelativeLayout
        android:id="@+id/no_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/base_corner_bg">
        <TextView
            android:id="@+id/warn_message_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
         <TextView
             android:id="@+id/warn_message_2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/warn_message_1"
             android:gravity="center"/>
        </RelativeLayout>

</RelativeLayout>